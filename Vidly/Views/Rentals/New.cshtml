@model dynamic

@{
    ViewBag.Title = "New Rental Form";
    //we don't need a layout here , in the _ViewStart.cshtml there is a layout already 
    //so we don't need to specify in every view
}

@*
Html.BeginForm would create a traditional HTML form , we would not do that
we are going to use raw HTML
*@

@*Ajax.BeginForm() is to call MVC controlers not api controlllers*@

<form action="~/Controllers/Api/">
    <div class="form-group">
        <label>Customer</label>
        <input id="customer" type="text" value="" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Movie</label>
        <input id="movie" type="text" value="" class="form-control"/>
    </div>
    <button class="btn btn-primary">Submit</button>
</form>


@section scripts
{
    <script>
        $(document).ready(function() {

            var vm = {};
            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                    minLength: 3,
                    highlight: true
                },
                {
                    name: 'customers',
                    display: 'name',
                    source: customers
                });

        }).on("typeahead:select",
            function(e, customer) {
                vm.customerId = customer.id;
            });




    </script>
}