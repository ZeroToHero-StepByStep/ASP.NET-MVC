@model Vidly.ViewModels.MovieViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Movies</h1>

<table class="table table-bordered table-hover" id="movies">
    <thead>
    <tr>
        <th>
            Movies
        </th>
        <th>
            Genre
        </th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#movies").DataTable(
                {
                    ajax: {
                        url: "/api/movies/",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name"
                        },
                        {
                            data: "genre.name"
                        }
                    ]
                });
         
        });
    </script>
}